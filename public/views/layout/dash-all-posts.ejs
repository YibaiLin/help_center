<h3>文章列表<a href="#" class="btn btn-outline-primary ml-3">新建</a></h3>
<hr>
<form class="form-inline" action="" method="get">
	<div class="form-group">
		<select class="form-control" name="category" id="">
			<option value="" selected>所有分类</option>
			<option value="edns">edns</option>
			<option value="quick start">quick start</option>
		</select>
	</div>
	<button class="btn btn-success ml-sm-3">查询</button>
</form>

<table class="table table-hover mt-3 bg-white">
	<thead class="bg-primary text-white">
		<tr>
			<td scope="col">序号</td>
			<td scope="col">标题</td>
			<td scope="col">作者</td>
			<td scope="col">分类</td>
			<td scope="col">更新日期</td>
			<td scope="col">操作</td>
		</tr>
	</thead>
	<tbody class="text-secondary">
		<% for (var i=0; i < posts.length; i++) {%>
			<tr>
				<td scope="row"><%=i+1%></td>
				<td><a href="/<%=posts[i].path %>" class="list-none"><%=posts[i].title %></a></td>
				<td><%=posts[i].author %></td>
				<td><%=posts[i].category.name %></td>
				<td><%=(new Date(posts[i].meta.updateAt)).toLocaleDateString() %></td>
				<td><a class="mr-3 text-primary" href="/admin/posts?post=<%=posts[i].path %>&action=modify">更新</a><a class="text-danger" href="/admin/posts?post=<%=posts[i].path %>&action=delete">删除</a></td>
			</tr>
		<%}%>
	</tbody>
</table>

</div>

