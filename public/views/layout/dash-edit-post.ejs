  <h2>编辑文章</h2>
  <hr>
  <form method='post' action='/admin/post/update'>
    <div class="form-group">
      <input name="title" type="text" class="form-control" value="<%=post.title%>">
    </div>
    <div class="form-group">
		<select class="form-control" name="category">
			<option value="" selected>选择分类</option>
			<% for (var i=0; i < categories.length; i++) {%>
				<% if (post.category.name === categories[i].name) {%>
					<option value="<%=categories[i].name%>%>" selected><%=categories[i].name%></option>
				<% continue }%>
				<option value="<%=categories[i].name%>"><%=categories[i].name%></option>
			<%}%>
		</select>
	</div>
    <div class="form-group">
      <textarea name="content" type="textarea" class="form-control" rows="24"><%=post.content%></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">保存</button>
    </div>
  </form>
</div>
