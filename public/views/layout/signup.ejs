<div class="signup-box">
  <div class="signup-form pt-3">
    <form method="POST" action="/user/signup">
      <div class="form-group row py-3">
        <label for="name" class="col-sm-2 offset-1 col-form-label">Name</label>
        <div class="col-sm-8">
          <input name="name" type="text" class="form-control" placeholder="Enter name">
          <small class="form-text text-muted">We'll never share your info with anyone else.</small>
        </div>
      </div>
      <div class="form-group row py-3">
        <label for="password" class="col-sm-2 offset-1 col-form-label">Password</label>
        <div class="col-sm-8">
          <input name="password" type="password" class="form-control" id="password1" placeholder="Password">
        </div>
      </div>
      <div class="form-group row py-3">
        <label for="confirmPwd" class="col-sm-2 offset-1 col-form-label">Confirm</label>
        <div class="col-sm-8">
          <input name="confirmPwd" type="password" class="form-control" id="password1" placeholder="Password">
        </div>
      </div>
      <div class="form-group row py-3">
        <label class="col-sm-2 offset-1 col-form-label">role</label>
        <div class="col-sm-2">
          <input name="role" type="number" class="form-control">
        </div>
      </div>
      <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary my-3 px-5">Sign Up</button>
      </div>
    </form>
  </div>

</div>