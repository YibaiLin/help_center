<div class="w-50 mx-auto mt-5">
  <form method="POST" action="/user/signup">
    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" type="text" class="form-control" placeholder="Enter name">
      <small class="form-text text-muted">We'll never share your info with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password1">Password</label>
      <input name="password" type="password" class="form-control" id="password1" placeholder="Password">
    </div>
    <div class="form-group">
      <label class="form-check-label" for="exampleCheck1">role</label>
      <input name="role" type="number" class="form-control" id="exampleCheck1">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>